<?xml version="1.0" encoding="utf-8"?>
<!--suppress XmlUnusedNamespaceDeclaration -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MakeAdvertisementActivity">

    <TextView
        android:id="@+id/makeAd_headline"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0"
        android:text="@string/makeAd_headline" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0"
        android:orientation="vertical">

        <TextView
            android:id="@+id/titleLabel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/titleLabel" />

        <EditText
            android:id="@+id/titleEntry"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/titleLabel"
            android:importantForAutofill="no"
            android:inputType="text"
            android:minHeight="48dp"
            tools:ignore="DuplicateSpeakableTextCheck" />

        <TextView
            android:id="@+id/priceRangeLabel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/priceRangeLabel" />

        <NumberPicker
            android:id="@+id/priceRangeEntry"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:importantForAutofill="no" />

        <TextView
            android:id="@+id/descriptionLabel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/descriptionLabel" />

        <EditText
            android:id="@+id/descriptionEntry"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/descriptionLabel"
            android:importantForAutofill="no"
            android:inputType="textMultiLine"
            android:minHeight="100dp"
            android:textColorHint="#78909C"
            tools:ignore="DuplicateSpeakableTextCheck" />

        <Button
            android:id="@+id/registerAd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/registerAd" />


    </LinearLayout>


</LinearLayout>