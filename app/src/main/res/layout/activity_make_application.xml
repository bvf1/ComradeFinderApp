<?xml version="1.0" encoding="utf-8"?>
<!--suppress XmlUnusedNamespaceDeclaration -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MakeApplicationActivity">

    <TextView
        android:id="@+id/makeAdvert_headline"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0"
        android:text="@string/makeAdvert_headline" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0"
        android:orientation="vertical">


        <TextView
            android:id="@+id/nameLabel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/nameLabel" />

        <EditText
            android:id="@+id/nameEntry"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/nameLabel"
            android:importantForAutofill="no"
            android:inputType="textPersonName"
            android:minHeight="48dp"
            tools:ignore="DuplicateSpeakableTextCheck" />


        <TextView
            android:id="@+id/emailLabel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/emailLabel" />

        <EditText
            android:id="@+id/emailEntry"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textEmailAddress"
            android:hint="@string/emailLabel"
            android:importantForAutofill="no" />

        <TextView
            android:id="@+id/phoneLabel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/phoneLabel"/>

        <EditText
            android:id="@+id/phoneEntry"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="phone"
            android:autofillHints="phone Number" />

        <TextView
            android:id="@+id/positionLabel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/positionLabel" />

        <EditText
            android:id="@+id/positionEntry"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColorHint="#78909C"
            tools:ignore="DuplicateSpeakableTextCheck"
            android:importantForAutofill="no"
            android:inputType="text" />

        <TextView
            android:id="@+id/lastCompanyLabel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/lastCompanyLabel" />

        <EditText
            android:id="@+id/lastCompanyEntry"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColorHint="#78909C"
            tools:ignore="DuplicateSpeakableTextCheck"
            android:importantForAutofill="no"
            android:inputType="text" />

        <TextView
            android:id="@+id/adExtraLabel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/adExtraLabel" />

        <EditText
            android:id="@+id/adExtraEntry"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColorHint="#78909C"
            tools:ignore="DuplicateSpeakableTextCheck"
            android:importantForAutofill="no"
            android:inputType="text" />


        <Button
            android:id="@+id/registerAd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/registerAd" />


    </LinearLayout>

</LinearLayout>